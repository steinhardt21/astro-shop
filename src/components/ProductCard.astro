---
import type { Product } from '../data';

interface Props {
  product: Product;
}

const { product } = Astro.props;
const transitionName = product.slug;
---

<a href={`/products/${product.slug}`} class="block">
  <article
    class="flex flex-col w-72 sm:w-60 bg-white shadow-sm rounded-lg overflow-hidden hover:shadow-xl hover:shadow-gray-100 transition-all"
  >
    <div class="w-72 sm:w-60 h-60 overflow-hidden">
      <img
        src={product.cover}
        alt={product.name}
        class="object-cover object-center w-full grayscale-[0.1] group-hover:grayscale-0 h-full rounded-md group-hover:scale-105 transition-all"
        transition:name={`${transitionName} image`}
      />
    </div>
    <div class="p-4">
      <h3
        class="font-semibold truncate"
        transition:name={`${transitionName} title`}
      >
        {product.name}
      </h3>
      <p
        class="text-sm truncate text-gray-600"
        transition:name={`${transitionName} description`}
      >
        {product.description}
      </p>
      <div class="text-right mt-4" transition:name={`${transitionName} price`}>
        <span class="font-semibold">${product.price}</span>
      </div>
    </div>
  </article>
</a>
